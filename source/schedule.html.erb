<div class="row mtm pdreset">
  <div class="col-sm-6 col-xs-12" data-schedule>
    <% current_page.data.day1_schedule.select{ |day1_schedule| day1_schedule.date == '2015/10/31'}.each do |f| %>
      <div class="col-xs-12 schedule">

          <% if f.timeStart != @prvTime; @prvTime = f.timeStart %>
          <div class="schedule-header"><span><%= f.timeStart %></span><span> ～ </span><span><%= f.timeEnd %></span></div>
          <% end %>

          <div class="schedule-body">
            <div class="schedule-img"><img src="<%= f.pic %>" width="100%" alt=""></div>
            <div class="schedule-content">
              <div class="schedule-content-header">
                <h3><%= f.title %></h3>
                <p><%= f.summary %></p>

                <% if f.issue != "" || f.speaker !="" %>
                <div class="slideDown"></div>
                <% end %>

              </div>
              <% if f.room != "" || f.type !="" %>
              <div class="schedule-content-footer text-white">
                <div class="schdule-type text-center">
                  <div class="col-xs-6 p0 bg-deep-blue"><%= f.room %></div>
                  <% if f.type == '技術'
                        @typeClass='bg-pink'
                     elsif f.type == '活動'
                         @typeClass = 'bg-light-green'
                     elsif f.type == '營運'
                         @typeClass = 'bg-gray'
                      end
                     %>
                  <div class="col-xs-6 p0 <%= @typeClass %>"><%= f.type %></div>
                </div> 
              </div>
              <% end %>
            </div>
          </div>
          <div class="schedule-footer">
            <h4>議題介紹</h4>
            <p><%= f.issue %></p> 
            <h4>講者簡介</h4>
            <p><%= f.speaker %></p> 
          </div>
      </div>
    <% end %>
  </div>
