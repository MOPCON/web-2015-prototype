<header class="header">
	<div class="circle-logo"></div>
	<img src="images/logo_header@2x.png" height="" width="500" alt="" class="img-responsive center-block super-idx">
</header>

<div class="bucket-panel bg-gray">
	<div class="bucket-row">
		<i class="bucket-icon ton-li-people-7"></i>
		<h3 class="bucket-title">高雄軟體技術社群</h3>
		<div></div>
	</div>
	<div class="row">
		<div class="col-sm-3">
			<nav class="list-group">
				<div class="list-group-item">
				  <h4>社群列表</h4>
				</div>
				<% current_page.data.cmy_list.each do |f| %>
					<a class="list-group-item" href="#<%= f.cmy_name %>"><%= f.cmy_name %></a>
				<% end %>
			</nav>
		</div><!-- col-sm-3 -->
		<div class="col-sm-9">
			<% current_page.data.cmy_list.each do |f| %>
				<div class="card" id="<%= f.cmy_name %>">
				<h3 class="card-head">
					<%= f.cmy_fullname %>
				</h3>
				<div class="card-body clearfix">
					<img  class="pull-left prm" src="<%= f.cmy_img %>" width="100" alt="">
					<p><%= f.cmy_content %></p>
				</div>
				<div class="card-body">
					<% if  f.cmy_facebook != "" %>
						<a href="<%= f.cmy_facebook %>">Facebook</a>
					<% end %>
					<% if  f.cmy_web != "" %>
						 <span class="fc-primary">&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</span> <a href="<%= f.cmy_web %>">Website</a>
					<% end %>
					<% if  f.cmy_google != "" %>
						 <span class="fc-primary">&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</span> <a href="<%= f.cmy_google %>">Google+</a>
					<% end %>
				</div>
			</div>
			<% end %>
		</div><!-- col-sm-9 -->


	</div>
</div>

